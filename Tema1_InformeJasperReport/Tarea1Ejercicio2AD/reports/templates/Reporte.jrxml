<?xml version="1.0"?>
<!DOCTYPE jasperReport
    PUBLIC "-//JasperReports//DTD Report Design//EN"
    "http://jasperreports.sourceforge.net/dtds/jasperreport.dtd">

<jasperReport name="Lista de clientes">
    <parameter name="reportTitle" class="java.lang.String"/>
    <parameter name="author" class="java.lang.String"/>
    <parameter name="starDate" class="java.lang.String"/>
    
    <queryString>
        <![CDATA[SELECT CUSTOMER_ID, NAME, PHONE, EMAIL FROM CUSTOMER ORDER BY NAME]]>
    </queryString>
    
    <field name="CUSTOMER_ID" class="java.lang.Integer"/>
    <field name="NAME" class="java.lang.String"/>
    <field name="PHONE" class="java.lang.String"/>
    <field name="EMAIL" class="java.lang.String"/>
    
    <title>
        <band height="60">
            <textField>
                <reportElement x="0" y="10" width="500" height="40"/>
                <textElement textAlignment="Center">
                    <font size="24"/>
                </textElement>
                <textFieldExpression class="java.lang.String">   
                    <![CDATA[$P{reportTitle}]]>
                </textFieldExpression>
            </textField>
            <textField>
                <reportElement x="0" y="40" width="500" height="20"/>
                <textElement textAlignment="Center"/>
                <textFieldExpression class="java.lang.String">
                    <![CDATA["Elaborado por: "+$P{author}
                        +"    "+$P{starDate}]]>
                </textFieldExpression>      
            </textField>
            <textField>
                <reportElement x="0" y="50" width="500" height="5"/>
                <textElement textAlignment="Center"/>
                <textFieldExpression class="java.lang.String">
                    <![CDATA["Elaborado por: "+$P{author}
                        +"on"+$P{starDate}]]>
                </textFieldExpression>      
            </textField>           
        </band>
    </title>    
    
    <columnHeader>
        <band height="30">
            <rectangle>
                <reportElement x="0" y="0" width="500" height="25"/>
                <graphicElement/>
            </rectangle>
            <staticText>
                <reportElement x="5" y="5" width="50" height="15"/>
                <textElement/>
                <text> <![CDATA[ID]]></text>
            </staticText>
            <staticText>
                <reportElement x="55" y="5" width="50" height="15"/>
                <textElement/>
                <text> <![CDATA[Nombre]]></text>
            </staticText>
            <staticText>
                <reportElement x="205" y="5" width="50" height="15"/>
                <textElement/>
                <text> <![CDATA[TelÃ©fono]]></text>
            </staticText>
            <staticText>
                <reportElement x="350" y="5" width="50" height="15"/>
                <textElement/>
                <text> <![CDATA[E-mail]]></text>
            </staticText>
        </band>
    </columnHeader>
    
    <detail>
        <band height="20">
            <textField>
                <reportElement x="5" y="0" width="50" height="15"/>
                <textElement/>
                <textFieldExpression class="java.lang.Integer">
                    <![CDATA[$F{CUSTOMER_ID}]]>
                </textFieldExpression>  
            </textField>
             <textField>
                <reportElement x="55" y="0" width="150" height="15"/>
                <textElement/>
                <textFieldExpression class="java.lang.String">
                    <![CDATA[$F{NAME}]]>
                </textFieldExpression>  
            </textField>           
             <textField>
                <reportElement x="205" y="0" width="255" height="15"/>
                <textElement/>
                <textFieldExpression class="java.lang.String">
                    <![CDATA[$F{PHONE}]]>
                </textFieldExpression>  
            </textField>            
             <textField>
                <reportElement x="350" y="0" width="460" height="15"/>
                <textElement/>
                <textFieldExpression class="java.lang.String">
                    <![CDATA[$F{EMAIL}]]>
                </textFieldExpression>  
            </textField> 
        </band>
    </detail>
</jasperReport>
